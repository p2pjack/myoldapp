<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hacker.eaun.cigmanotes.SearchActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#03A9F4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="#03A9F4"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_supplier_code_here"
            android:id="@+id/editText_code"
            android:textColor="@color/TextColourWhite"
            android:maxLength="6"
            android:imeOptions="actionDone"
            android:background="#03A9F4"
            android:layout_margin="4dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/denso_airs_cz"
            android:id="@+id/editText_supplier"
            android:textColor="@color/TextColourWhite"
            android:maxLength="120"
            android:imeOptions="actionDone"
            android:background="#03A9F4"
            android:layout_margin="4dp" />



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="#03A9F4"
        android:elevation="15dp"
        android:animateLayoutChanges="false"
        android:animationCache="false"
        android:alwaysDrawnWithCache="false"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_search"
            android:textColor="@color/TextColourWhite"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="#03A9F4"
            android:elevation="15dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:typeface="serif"
            android:text="@string/supplier"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/supplier_code"
            android:id="@+id/button_code"
            android:textColor="@color/TextColourWhite"
            android:textStyle="bold"
            android:layout_weight="1"
            android:elevation="15dp"
            android:background="#03A9F4"
            android:textAlignment="center"
            android:typeface="serif"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="#03A9F4">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
    </LinearLayout>
</LinearLayout>
